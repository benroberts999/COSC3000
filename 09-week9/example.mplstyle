# Set default figure size
figure.figsize : 4, 3

# figsize is in inches. 4 inches is about half a4 width
# Keeping figsize in "real" units means we can use "real" font sizes!

# Set x axis
xtick.direction : in
xtick.top : True

# Set y axis
ytick.direction : in
ytick.right : True

# Font style
font.family : serif
font.size:    10.0

# Legend
legend.frameon : True

# Set color cycle:
axes.prop_cycle : cycler('color', ['0C5DA5', '00B945', 'FF9500', 'FF2C00', '845B97', '474747', '9e9e9e'])